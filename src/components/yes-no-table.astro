---
type Props = {
  yesContent?: string
  noContent?: string
}

const { yesContent, noContent } = Astro.props
---

<div class="grid lg:grid-cols-2 lg:gap-8">
  <div>
    <h3 class="text-green-600 font-bold text-2xl">Yes means</h3>
    <p>{yesContent}</p>
  </div>
  <div>
    <h3 class="text-red-600 font-bold text-2xl">No means</h3>
    <p>{noContent}</p>
  </div>
</div>
