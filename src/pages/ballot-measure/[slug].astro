---
import Container from '#components/container.astro'
import YesNoTable from '#components/yes-no-table.astro'
import GlobalLayout from '#layouts/global-layout.astro'
import { getReadingTime } from '#utils/get-reading-time'
import { Image } from 'astro:assets'
import { getEntry } from 'astro:content'
import { getEntries } from 'astro:content'
import { getCollection } from 'astro:content'
import dayjs from 'dayjs'

export async function getStaticPaths() {
  const allBallotMeasures = await getCollection('ballot-measures')
  return allBallotMeasures.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }))
}

const { post } = Astro.props
const tags = await getEntries(post.data.tags || [])
const election = await getEntry(post.data.election)

const { Content } = await post.render()
---

<GlobalLayout>
  <div class="bg-center bg-no-repeat bg-cover relative">
    <Image
      class="absolute size-full inset-0 object-cover z-10"
      src={post.data.header.overlay_image}
      loading="eager"
      alt=""
      aria-hidden
    />
    <div class="relative z-20 bg-black/50 py-20">
      <div
        class="max-w-7xl mx-auto px-6 [text-shadow:1px_1px_4px_rgba(0,0,0,0.5)]"
      >
        <h1
          class="mb-8 max-w-prose text-5xl font-bold leading-tight text-white"
        >
          {post.data.title}
        </h1>
        <p class="text-white text-2xl max-w-prose mb-8">
          {post.data.excerpt}
        </p>
        <p class="text-white flex items-center gap-2">
          <span class="icon-[fa6-regular--clock] size-4" aria-hidden></span>
          <span>{getReadingTime(post.body)}</span>
        </p>
      </div>
    </div>
  </div>

  <Container>
    <div class="prose prose-neutral my-12">
      <Content components={{ YesNoTable }} />
    </div>

    <div class="space-y-2">
      <div class="flex items-center gap-4">
        <div class="flex gap-2 items-center text-gray-500">
          <span class="icon-[fa6-solid--tags] size-5" aria-hidden></span>
          <span class="font-bold">Tags:</span>
        </div>
        <ul class="flex gap-2 list-none">
          {
            tags.map((tag) => (
              <li>
                <a
                  class="flex rounded h-9 px-3 items-center border no-underline text-neutral-600 border-neutral-400"
                  href={`/tags#${tag.id}`}
                >
                  {tag.data.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="flex items-center gap-4">
        <div class="flex gap-2 items-center text-gray-500">
          <span class="icon-[fa6-solid--folder-open] size-5" aria-hidden></span>
          <span class="font-bold">Election:</span>
        </div>
        <ul>
          <li>
            <a
              class="flex rounded h-9 px-3 items-center border no-underline text-neutral-600 border-neutral-400"
              href={`/elections#${election.id}`}>{election.data.title}</a
            >
          </li>
        </ul>
      </div>
      <div class="flex items-center gap-4 h-9">
        <div class="flex gap-2 items-center text-gray-500">
          <span class="icon-[fa6-solid--calendar-days] size-5" aria-hidden
          ></span>
          <span class="font-bold">Updated: </span>
        </div>
        <span>{dayjs(post.data.lastModifiedDate).format('MMMM D, YYYY')}</span>
      </div>
    </div>
  </Container>
</GlobalLayout>
